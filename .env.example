# Environment variables for ops-toolkit
# Copy this file to .env and fill in your values

# Publishing to npm
# Get an automation token from: https://www.npmjs.com/settings/tokens
NPM_TOKEN=your_npm_automation_token_here

# GitHub releases (optional, for creating GitHub releases)
# Get a personal access token from: https://github.com/settings/tokens
# Required scopes: repo
GITHUB_TOKEN=your_github_token_here

# Debug mode
DEBUG=false
NODE_ENV=development

# CLI Options
OPS_CONFIG_PATH=~/.ops-toolkit
OPS_LOG_LEVEL=info

# API Keys (if needed)
# API_KEY=your_api_key_here

# Deployment settings
DEPLOY_ENV=development
DEPLOY_TIMEOUT=300000

# Monitoring settings
MONITOR_REFRESH_INTERVAL=1000
MONITOR_HISTORY_SIZE=100

# Log settings
LOG_MAX_LINES=1000
LOG_DEFAULT_PATH=/var/log
