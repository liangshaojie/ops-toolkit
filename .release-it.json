{
  "git": {
    "commit": true,
    "tag": true,
    "push": true,
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  },
  "github": {
    "release": true,
    "owner": "liangshaojie",
    "repo": "ops-toolkit"
  },
  "npm": {
    "publish": true,
    "access": "public",
    "skipChecks": true,
    "ignoreVersion": false
  },
  "hooks": {
    "before:init": ["bun run lint", "bun run typecheck"],
    "after:bump": ["bun run build"],
    "before:release": ["git add -A"],
    "after:release": []
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
